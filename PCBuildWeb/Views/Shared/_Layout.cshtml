<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PBS Building Helper</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PCBuildWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PBS - Building Helper</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Computer Parts
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Cases")">Cases</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "CaseFans")">Case Fans</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "CPUs")">CPUs</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "CPUCoolers")">CPU Coolers</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "MemoryChips")">Memory Chips</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Motherboards")">Motherboards</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "PSUs")">Power Supply Units</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Storages")">Storage Units</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "WC_CPU_Blocks")">Watercooled CPU Blocks</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "WC_Radiators")">Watercooled Radiators</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "WC_Reservoirs")">Watercooled Reservoirs</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Parts Properties
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("Index", "CPUSeries")">CPU Series</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "CPUSockets")">CPU Sockets</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "GPUChipsets")">GPU Chipsets</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "GPUChipsetSeries")">GPU Chipsets Series</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "Manufacturers")">Manufaturers</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "MoboChipsets")">Motherboard Chipsets</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "MoboSizes")">Motherboard Form Factors</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "MultiGPUs")">Multi GPU Types</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "PowerConnectors")">Power Connectors</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Index", "PSUSizes")">PSU Form Factors</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav align-content-lg-end">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - PCBuildWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
